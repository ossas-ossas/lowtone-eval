/* pages/home/home.wxss */
.container {
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.welcome-section {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  color: white;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.welcome-subtitle {
  font-size: 32rpx;
  margin-bottom: 30rpx;
  opacity: 0.9;
}

.welcome-desc {
  font-size: 26rpx;
  line-height: 1.6;
  opacity: 0.8;
  max-width: 600rpx;
  margin: 0 auto;
}

.user-section {
  padding: 0 40rpx 40rpx;
}

.user-card {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.role {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.menu-section {
  background: white;
  margin: 40rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.menu-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.menu-group {
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f9fa;
  border-radius: 12rpx;
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
  width: 60rpx;
  text-align: center;
}

.menu-content {
  flex: 1;
}

.menu-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

.login-section {
  padding: 40rpx;
  text-align: center;
}

.login-button {
  background: #4A90E2;
  color: white;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3);
}

.login-button:active {
  background: #357ABD;
}

.login-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 20rpx;
}

.help-section {
  background: white;
  margin: 40rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.help-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.help-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.help-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.help-number {
  background: #4A90E2;
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.help-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}
